@page "/todo"

<PageTitle>Todo</PageTitle>

<h3 class="text-primary">Todo</h3>
<hr />

<ul class="list-group mb-3" >
    @foreach (var todo in todos)
    {
        <li class="list-group-item d-flex align-items-center ">
            <input class="form-check-input me-3" type="checkbox" @bind="todo.IsDone" />
            <input class="form-control w-25" @bind="todo.Title" />
        </li>
    }
</ul>
<input class="form-control w-25 mb-3" placeholder="Something todo" @bind="newTodo" />
<button class="btn btn-success" @onclick="AddTodo">Add todo</button>

<h3 class="text-primary">Todo (@todos.Count(todo => !todo.IsDone))</h3>

@code {
    private List<TodoItem> todos = new();

    private string? newTodo;

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}